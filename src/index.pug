	.modals
		.remodal.modal.modal--textarea(data-remodal-id="cancel")
			button.modal__close(data-remodal-action="close" class="remodal-close")
			h3.modal__title Напишите причину отклонения
			textarea.modal__textarea(placeholder="Комментарий" rows="4")
			.modal__buttons
				.player__button(data-remodal-action="cancel")
					+svg("cancel")
					span Отмена
				.player__button.player__button--focus.player__button--cancel(data-remodal-action="confirm")
					+svg("confirm")
					span Да
		.remodal.modal(data-remodal-id="confirm")
			button.modal__close(data-remodal-action="close" class="remodal-close")
			h3.modal__title Подтверждение
			.modal__text Принять модель в работу?
			.modal__buttons
				.player__button(data-remodal-action="cancel")
					+svg("cancel")
					span Отмена
				.player__button.player__button--focus.player__button--confirm(data-remodal-action="confirm" id="confirmModel")
					+svg("confirm")
